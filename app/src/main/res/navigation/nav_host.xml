<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.bottomnavigation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/search"
        android:name="com.example.bottomnavigation.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/settings"
        android:name="com.example.bottomnavigation.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/exampleFragment"
        android:name="com.example.bottomnavigation.ExampleFragment"
        android:label="fragment_example"
        tools:layout="@layout/fragment_example" />
    <fragment
        android:id="@+id/lastFragment"
        android:name="com.example.bottomnavigation.LastFragment"
        android:label="fragment_last"
        tools:layout="@layout/fragment_last" />
</navigation>